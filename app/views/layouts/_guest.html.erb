<% unless root_path %>
<div id="guestModal" class="reveal-modal">
  <ul class="tabs-content">
    <li class="active" id="loginTab">
      <div>
        <%= form_for :session, :url => session_path do |f| %>
          <%= f.text_field :full_name, :id => "full-name",
                         :placeholder => "Full Name", :required => true %>
          <%= f.email_field :email, :id => "email-address",
                            :placeholder => "Email Address",
                            :required => true %>
          <%= f.phone_field :phone_number, :id => "phone_number",
                            :placeholder => "Phone Number" %>
          <%= f.submit "Continue as Guest", id: "guest-submit" %>
        <% end %>
      </div>
    </li>
  </ul>
  <a class="close-reveal-modal">Ã—</a>
</div>
<% end %>
